size = input("What size of pizza do you want? S,M, or L ")
add_pepperoni = input("Would you like pepperoni? Y/N ")
extra_cheeze = input("Would you like cheese Y/N ")

bill = 0
if size == "S":
    bill += 15
elif size == "M":
    bill += 20
elif size == "L":
    bill +=25
else:
    print("Invalid Input")

if add_pepperoni == "Y":
    if size == "S":
        bill += 2
    else:
        bill +=3

if extra_cheeze == "Y":
    bill +=1;

print(bill)
